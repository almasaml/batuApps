<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="maps"
                type="com.almas.batuapps.menu.maps.viewmodels.FragmentMapsViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10.80dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewMapLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:textSize="50.40sp"
                android:textColor="@color/cardview_shadow_start_color"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewMapLocationDirection"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="14.40dp"
                android:layout_marginRight="14.40dp"
                android:layout_toRightOf="@id/textViewMapLocationName"
                android:layout_toEndOf="@id/textViewMapLocationName"
                app:srcCompat="@drawable/ic_direction" />
    </RelativeLayout>
</layout>